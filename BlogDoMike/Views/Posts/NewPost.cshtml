@model BlogDoMike.ViewModels.PostViewModel
@{
    ViewBag.Title = "NewPost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Novo Post</h2>

@{using (Html.BeginForm("Save", "Posts", FormMethod.Post,
                                new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.LabelFor(p => p.Title)
            @Html.TextBoxFor(p => p.Title, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Body)
            @Html.TextAreaFor(p => p.Body, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Author_Id)
            @Html.DropDownListFor(p => p.Author_Id, new SelectList(Model.Author, "Id", "Name" ), "Select an Option", new { @class = "form-control" })
        </div>
        @Html.HiddenFor(p => p.Id)
        <div class="form-group">
            <input type="submit" id="btnSave" value="Save" onclick="sendData()"
                   class="btn btn-primary" />
        </div>
    }
}